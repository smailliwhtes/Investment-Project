<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketApp.Gui.Views.DashboardPage"
             Title="Dashboard">
    <Grid ColumnDefinitions="3*,2*" RowDefinitions="Auto,*">
        <HorizontalStackLayout Grid.ColumnSpan="2" Padding="12" Spacing="10">
            <Button Text="Run now" Command="{Binding RunCommand}" />
            <Label Text="{Binding ProgressStage}" />
            <ProgressBar Progress="{Binding ProgressPercent}" WidthRequest="200" />
            <Label Text="{Binding ProgressMessage}" />
        </HorizontalStackLayout>
        <CollectionView Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Symbols}" />
        <TabView Grid.Row="1" Grid.Column="1">
            <TabViewItem Text="Summary"><Label Text="Explainability summary" /></TabViewItem>
            <TabViewItem Text="Charts"><Label Text="Candlestick + forecast chart area" /></TabViewItem>
            <TabViewItem Text="Explain"><Label Text="Feature contributions and evidence strings" /></TabViewItem>
        </TabView>
    </Grid>
</ContentPage>
