<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketApp.Gui.Pages.LogsPage"
             Title="Logs">
  <VerticalStackLayout Padding="16" Spacing="12">
    <Label Text="Engine & UI logs" FontSize="22" FontAttributes="Bold" />
    <Editor Text="{Binding CombinedLog}" AutoSize="TextChanges" IsReadOnly="True" HeightRequest="300" />
  </VerticalStackLayout>
</ContentPage>
